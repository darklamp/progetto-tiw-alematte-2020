<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:mysql://192.168.1.124:3306/TIWProject?serverTimezone=UTC</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>matteo</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>matmacsystem</param-value>
    </context-param>
    <context-param>
        <param-name>dbDriver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <filter>
        <filter-name>Checker</filter-name>
        <filter-class>it.polimi.tiw.filters.Checker</filter-class>
    </filter>
    <filter>
        <filter-name>ManagerChecker</filter-name>
        <filter-class>it.polimi.tiw.filters.ManagerChecker</filter-class>
    </filter>
    <filter>
        <filter-name>WorkerChecker</filter-name>
        <filter-class>it.polimi.tiw.filters.WorkerChecker</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Checker</filter-name>
        <url-pattern>/manager</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/worker</url-pattern>
        <url-pattern>/manager/campaign</url-pattern>
        <url-pattern>/manager/createCampaign</url-pattern>
        <url-pattern>/imageUploader</url-pattern>
        <url-pattern>/manager/campaignActions</url-pattern>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/manager/getCampaignImageData</url-pattern>
        <url-pattern>/worker/campaign</url-pattern>
    </filter-mapping>
    <filter-mapping>
         <filter-name>ManagerChecker</filter-name>
         <url-pattern>/manager</url-pattern>
        <url-pattern>/manager/campaign</url-pattern>
        <url-pattern>/manager/createCampaign</url-pattern>
        <url-pattern>/imageUploader</url-pattern>
        <url-pattern>/manager/campaignActions</url-pattern>
        <url-pattern>/manager/campaignReport</url-pattern>
        <url-pattern>/manager/getCampaignImageData</url-pattern>
     </filter-mapping>
     <filter-mapping>
         <filter-name>WorkerChecker</filter-name>
         <url-pattern>/worker</url-pattern>
         <url-pattern>/worker/campaign</url-pattern>
     </filter-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>